            ServerStringDateAtRender:'@DateTime.Now.ToString(LMYFrameWorkMVC.Common.Helpers.Utilites.GetSettingValue(LMYFrameWorkMVC.Common.LookUps.SettingsKeys.FullDateFormat))',
