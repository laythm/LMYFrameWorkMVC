@model List<LMYFrameWorkMVC.Common.Models.LoginViewModel>
@ViewData["Artists"]
@for (int i = 0; i < Model.Count; i++)
{
    @Html.TextBoxFor(m => Model[i].Name)
    @Html.ValidationMessageFor(model => Model[i].Name, "", new { @class = "text-danger" })

    @Html.TextBoxFor(m => Model[i].Password)
    @Html.ValidationMessageFor(model => Model[i].Password, "", new { @class = "text-danger" })

    @Html.TextBoxFor(m => Model[i].UserName)
    @Html.ValidationMessageFor(model => Model[i].UserName, "", new { @class = "text-danger" }) // binding works only with items which are accessed by indexer
}
